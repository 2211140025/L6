<%= form_with model: @cart_item,url:cart_items_path do |f| %>
<p>
  <%= f.label :name,'商品名' %>
  <%= Product.find(params[:product_id]).name %>
</p>

<p>
  <%= f.label :price,'価格' %>
  <%= Product.find(params[:product_id]).price %>
</p>
<p>
    <%= f.label :qty, '個数' %>
    <%= f.text_field :qty %>
</p>
<%= f.hidden_field :product_id, value: params[:product_id] %>
  <%= f.submit '登録' %>
<% end %>